---
export interface Props {
	title?: string;
	description?: string;
}

const title = Astro.props.title ?? 'Zhengjie Thoughts';
const description =
	Astro.props.description ?? 'Notes on computer science, engineering, and networks.';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="color-scheme" content="light" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Source+Serif+4:opsz,wght@8..60,400,600,700&family=Inter:wght@400,600,700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<div class="frame">
			<header class="top">
				<a class="brand" href="/">zhengjiethoughts</a>
				<nav class="nav">
					<a href="/">Posts</a>
					<a href="/admin">Admin</a>
				</nav>
			</header>

			<slot />

			<footer class="foot">
				<p>
					Â© {new Date().getFullYear()} Zhengjie. Built with Astro + Rust.
				</p>
			</footer>
		</div>
	</body>
</html>

<style>
	:global(:root) {
		--bg: #fbfaf7;
		--paper: #ffffff;
		--paper-2: #fbfbfb;
		--ink: #161515;
		--muted: #5b5956;
		--border: rgba(22, 21, 21, 0.12);
		--content: 70ch;
	}

	:global(html) {
		background: var(--bg);
		color: var(--ink);
		font-family: Inter, system-ui, -apple-system, Segoe UI, sans-serif;
		text-rendering: optimizeLegibility;
		-webkit-font-smoothing: antialiased;
	}

	:global(body) {
		margin: 0;
		min-height: 100vh;
	}

	:global(.prose) {
		font-family: "Source Serif 4", Georgia, serif;
		font-size: 1.05rem;
		line-height: 1.75;
	}

	:global(.prose :is(h2, h3)) {
		font-family: Inter, system-ui, -apple-system, Segoe UI, sans-serif;
		letter-spacing: -0.01em;
	}

	:global(.prose pre) {
		padding: 1rem;
		border-radius: 14px;
		border: 1px solid var(--border);
		overflow: auto;
		background: #0f1215;
		color: #eef2f6;
	}

	:global(.prose code) {
		font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono",
			"Courier New", monospace;
		font-size: 0.95em;
	}

	.frame {
		min-height: 100vh;
		display: grid;
		grid-template-rows: auto 1fr auto;
	}

	.top {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		gap: 1rem;
		padding: 1.25rem 1.25rem;
		border-bottom: 1px solid var(--border);
		background: color-mix(in srgb, var(--bg) 80%, white 20%);
		backdrop-filter: blur(6px);
		position: sticky;
		top: 0;
		z-index: 10;
	}

	.brand {
		text-decoration: none;
		color: var(--ink);
		font-weight: 700;
		letter-spacing: -0.02em;
	}

	.nav {
		display: flex;
		gap: 0.9rem;
	}

	.nav a {
		color: var(--muted);
		text-decoration: none;
		font-size: 0.95rem;
	}

	.nav a:hover {
		color: var(--ink);
		text-decoration: underline;
		text-underline-offset: 3px;
	}

	.foot {
		padding: 2rem 1.25rem;
		color: var(--muted);
		border-top: 1px solid var(--border);
		background: var(--bg);
	}

	.foot p {
		max-width: var(--content);
		margin: 0 auto;
		font-size: 0.92rem;
	}
</style>
